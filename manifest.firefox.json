{
  "manifest_version": 3,
  "name": "Web Extension Template",
  "author": "Mitchell Mark-George",
  "version": "1.0",
  "description": "A standard web extension template",
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["content/content.js"]
    }
  ]
}
